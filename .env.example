# Environment Variables for Gearbox Fintech

# Database
DATABASE_URL=file:./db.sqlite

# Server
PORT=3000
NODE_ENV=development

# Twilio SMS (https://console.twilio.com)
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+64211234567

# SendGrid Email (https://app.sendgrid.com)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@gearbox.app
SENDGRID_FROM_NAME=Gearbox Fintech

# Xero Integration (https://developer.xero.com)
XERO_CLIENT_ID=your_xero_client_id_here
XERO_CLIENT_SECRET=your_xero_client_secret_here
XERO_REDIRECT_URI=http://localhost:3000/api/integrations/xero/callback

# MYOB Integration (https://developer.myob.com)
MYOB_CLIENT_ID=your_myob_client_id_here
MYOB_CLIENT_SECRET=your_myob_client_secret_here
MYOB_REDIRECT_URI=http://localhost:3000/api/integrations/myob/callback

# QuickBooks Integration (https://developer.intuit.com)
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id_here
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret_here
QUICKBOOKS_REDIRECT_URI=http://localhost:3000/api/integrations/quickbooks/callback

# File Storage (AWS S3 or Cloudflare R2)
S3_ACCESS_KEY_ID=your_access_key_here
S3_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET_NAME=gearbox-media
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com # or Cloudflare R2 endpoint

# Stripe Payments (https://dashboard.stripe.com)
STRIPE_PUBLIC_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Subscription Price IDs (create products in Stripe Dashboard first)
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly_id
STRIPE_PRICE_STARTER_YEARLY=price_starter_yearly_id
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_professional_monthly_id
STRIPE_PRICE_PROFESSIONAL_YEARLY=price_professional_yearly_id
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly_id
STRIPE_PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly_id


# Application URLs
APP_URL=http://localhost:5173
API_URL=http://localhost:3000

# Security
JWT_SECRET=your_random_secret_key_here_change_in_production
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Feature Flags
ENABLE_BOOKING_WIDGET=true
ENABLE_XERO_INTEGRATION=true
ENABLE_MYOB_INTEGRATION=false
ENABLE_QUICKBOOKS_INTEGRATION=false
ENABLE_DVI=true
ENABLE_MOBILE_APP=false
